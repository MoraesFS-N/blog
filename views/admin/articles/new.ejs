<%- include ('../../partials/head') -%>

<%- include ('../../partials/nav') -%>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="POST">
                    <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" required>
                    <br>
                    <textarea class="form-control" placeholder="Escreva o seu artigo aqui" id="article" name="bodyArticle" cols="30" rows="10" required></textarea>
                    <br>
                    <div id="flex-form-article">
                    <label>Selecione a categoria:</label>
                    <select name="category" class="form-control" required>
                        <% categories.forEach((category) => {%>
                            <option value="<%= category.id %>" ><%= category.title %> </option>
                         <% })  %>    
                    </select>
                    <button class="btn btn-success">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include ('../../partials/footer') -%> 
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector:'#article',
        plugins: [
            'advlist autlink link image lists print preview hr searchreplace wordcount fullscren insertdatetime media save table paste emoticons'
        ]
    });

</script>